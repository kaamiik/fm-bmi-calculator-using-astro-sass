<section class="bmi-control" aria-labelledby="bmi-control-heading">
  <div class="container">
    <h2 id="bmi-control-heading" class="visually-hidden">
      How to control your BMI?
    </h2>
    <ul class="bmi-control__items">
      {
        bmiControlItems.map((item) => (
          <li class="bmi-control__item">
            <div class="bmi-control__item--icon">
              <svg
                aria-hidden="true"
                focusable="false"
                xmlns="http://www.w3.org/2000/svg"
                width="64"
                height="64"
                fill="none"
                viewBox="0 0 64 64"
              >
                <circle
                  cx="32"
                  cy="32"
                  r="32"
                  fill={item.iconColor}
                  opacity=".15"
                />
                <path fill={item.iconColor} d={item.iconPath} />
              </svg>
            </div>
            <div class="bmi-control__item--info">
              <h3 class="heading-3">{item.heading}</h3>
              <p>{item.description}</p>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style lang="scss">
  @use "../styles/abstracts/" as *;

  .bmi-control {
    background: $gradient-2;
    padding: $size-14 0;

    @include mq(medium) {
      padding: $size-15 0;
    }

    @include mq(large) {
      margin-block-start: $size-22;
      width: min(100% - calc(#{$size-6} * 2), 90rem);
      margin-inline: auto;
      border-radius: 35px;
    }

    &__items {
      @include flex($size-10);

      @include mq(large) {
        flex-direction: row;
        gap: $size-8;
      }
    }

    &__item {
      @include flex($size-8);

      @include mq(medium) {
        flex-direction: row;
        align-items: center;
        gap: $size-10;
      }

      @include mq(large) {
        flex-direction: column;
        align-items: flex-start;
        gap: $size-12;
      }
    }

    &__item--info {
      @include flex($size-6);
    }
  }
</style>

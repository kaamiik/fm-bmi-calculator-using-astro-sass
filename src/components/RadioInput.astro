---
const { unitType } = Astro.props;
---

<label class="bmi-calculator__radio" for={unitType}>
  <input type="radio" name="unitType" id={unitType} value={unitType} />
  {unitType.charAt(0).toUpperCase() + unitType.slice(1)}
</label>

<style lang="scss">
  @use "../styles/abstracts/" as *;
  .bmi-calculator__radio {
    flex: 1;
    @include flex($size-4, $align: center, $fd: row);
  }

  input[type="radio"] {
    appearance: none;
    aspect-ratio: 1 / 1;
    background-color: #fff;
    cursor: pointer;
    margin: 0;
    font: inherit;
    color: currentColor;
    width: 31px;
    height: 31px;
    border: 2px solid #6c9aa3;
    border-radius: 50%;
    transition: 250ms border ease-in-out;
    display: grid;
    place-content: center;

    &::before {
      content: "";
      width: 15px;
      height: 15px;
      border-radius: 50%;
      transform: scale(0);
      transition: 250ms transform ease-in-out;
      background-color: rgba(52, 95, 246, 15%);
      box-shadow: inset 1em 1em $color-primary-400;
    }

    &:checked {
      background-color: rgba(52, 95, 246, 15%);
      border: 0;
    }

    &:checked::before {
      transform: scale(1);
    }

    &:hover {
      border: 2px solid $color-primary-400;
    }

    &:focus {
      outline: 3px solid currentColor;
      outline-offset: 4px;
    }
  }
</style>

---
import PrimaryNavigation from "./PrimaryNavigation.astro";
---

<header class="site-header">
  <div class="container">
    <div class="site-header__inner">
      <a class="logo--link" href="/index.html">
        <img
          class="logo--img"
          aria-hidden="true"
          src="/public/assets/images/logo.svg"
          alt=""
          width="40"
          height="40"
        />
        <p class="visually-hidden">Body Mass Index Calculator Site</p>
      </a>
    </div>
  </div>
</header>

<style lang="scss">
  @use "../styles/abstracts" as *;

  .site-header {
    color: $site-header-color;
    background-color: $site-header-background-color;
    padding: $site-header-padding-small-screen;

    @include mq(medium) {
      padding: $site-header-padding-medium-screen;
    }
    @include mq(large) {
      padding: $site-header-padding-large-screen;
    }

    &__inner {
      display: flex;
      align-items: $site-header-alignment;
      justify-content: $site-header-jusitifcation-small-screens;

      @include mq(large) {
        justify-content: $site-header-jusitifcation-large-screens;
      }
    }
  }

  .logo--link:focus-visible {
    outline: 4px dotted $color-primary-400;
    outline-offset: 4px;
    border-radius: 50%;
  }

  .logo--img {
    @include mq(large) {
      width: 64px;
      height: 64px;
    }
  }
</style>
